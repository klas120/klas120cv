@model KennethCV.Models.Experience

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<fieldset>
    <legend>Experience</legend>


    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3>Are you sure you want to delete this?</h3>
        </div>
        <div class="panel-body">
            
            <div class="display-field">Employment: @Model.Employment</div>
            <hr />             
            
            <div class="display-field">Years: @Model.SinceUntil</div>           
            <hr />  

             <div class="display-field">Workplace: @Model.Workplace</div>
            <hr />

            <div class="display-field">WorkDetail: @Model.WorkDetail</div>
            <hr />            

            @using (Html.BeginForm()) {
                <p>
                    <button type="submit" class="btn btn-primary">Delete</button> |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            }
            
        </div>
    </div>       



   


