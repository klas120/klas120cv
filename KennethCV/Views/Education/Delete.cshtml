@model KennethCV.Models.Education

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<fieldset>
    <legend>Education</legend>


    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3>Are you sure you want to delete this?</h3>
        </div>
        <div class="panel-body">
            
            <div class="display-field">Institute: @Model.TrainingCenter</div>
            <hr />             
            
            <div class="display-field">Certificate: @Model.CertificateName</div>           
            <hr />  

             <div class="display-field">Level: @Model.GradeLevel</div>
            <hr />

            <div class="display-field">Received: @Model.yearReceived</div>
            <hr /> 
</fieldset>
    @using (Html.BeginForm()) {
        <p>
            <button type="submit" class="btn btn-primary">Delete</button> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }


